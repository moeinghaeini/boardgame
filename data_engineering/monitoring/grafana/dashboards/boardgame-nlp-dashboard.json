{
  "dashboard": {
    "id": null,
    "title": "Board Game NLP - Data Engineering Dashboard",
    "tags": ["boardgame", "nlp", "data-engineering"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"boardgame-nlp-api\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "xAxes": [
          {
            "type": "time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"boardgame-nlp-api\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"boardgame-nlp-api\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Data Processing Pipeline Status",
        "type": "stat",
        "targets": [
          {
            "expr": "airflow_dag_run_state{job=\"airflow\"}",
            "legendFormat": "{{dag_id}} - {{state}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Model Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "model_accuracy{job=\"boardgame-nlp-api\"}",
            "legendFormat": "{{model_name}} - {{model_version}}"
          }
        ],
        "yAxes": [
          {
            "label": "Accuracy",
            "min": 0,
            "max": 1
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Data Quality Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "data_quality_score{job=\"boardgame-nlp-api\"}",
            "legendFormat": "{{data_source}}"
          }
        ],
        "yAxes": [
          {
            "label": "Quality Score",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cpu_usage_total[5m]) * 100",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "memory_usage_bytes / memory_limit_bytes * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "Usage %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Data Lake Storage",
        "type": "graph",
        "targets": [
          {
            "expr": "s3_bucket_size_bytes{job=\"boardgame-nlp-api\"}",
            "legendFormat": "{{bucket_name}}"
          }
        ],
        "yAxes": [
          {
            "label": "Storage (bytes)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
